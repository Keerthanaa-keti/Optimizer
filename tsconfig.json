{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "references": [
    { "path": "packages/core" },
    { "path": "packages/db" },
    { "path": "packages/scanner" },
    { "path": "packages/executor" },
    { "path": "packages/token-monitor" },
    { "path": "packages/intelligence" },
    { "path": "apps/dashboard" },
    { "path": "apps/cli" },
    { "path": "apps/menubar" }
  ]
}
